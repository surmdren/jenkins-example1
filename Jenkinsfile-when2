pipeline {
    agent any
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Example Deploy') {
            environment {
                DEPLOY_TO = 'production'
            }
            when {  
                branch 'production'
            }
            steps {
                sh 'printenv'
                echo 'Deploying'
            }
        }
    }
}