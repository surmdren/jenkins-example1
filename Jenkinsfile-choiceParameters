pipeline {
    agent any
    parameters {
        choice(name: 'PLATFORM_FILTER', choices: ['all', 'linux', 'windows', 'mac'], description: 'Run on specific platform')
    }
    stages {
        stage('choiceParameters') {
            steps {
              script{
                newChoice  = [$class: 'ChoiceParameterDefinition', choices: ['','ADD','SHOW','DELETE','UPDATE','RESET'], description: 'Choose something', name: ''];
              }
            }
        }
    }
}